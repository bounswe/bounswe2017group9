<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abtasdan.listviewtutorial.activities.ProfileActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:weightSum="4"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_home_profile"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:text="Home"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_profile_profile"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:text="Profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_explore_profile"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:text="Explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_logout_profile"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:text="Logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:textSize="30sp"
            android:text="Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>